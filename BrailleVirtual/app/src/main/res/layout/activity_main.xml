<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lfernando.braillevirtual.MainActivity">

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pontoC11" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/pontoC12"
        android:layout_below="@+id/pontoC11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/pontoC13"
        android:layout_below="@+id/pontoC12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/pontoC14"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pontoC11"
        android:layout_toEndOf="@+id/pontoC11" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/pontoC13"
        android:layout_alignRight="@+id/pontoC14"
        android:layout_alignEnd="@+id/pontoC14"
        android:id="@+id/pontoC15" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/pontoC16"
        android:layout_below="@+id/pontoC15"
        android:layout_alignLeft="@+id/pontoC15"
        android:layout_alignStart="@+id/pontoC15" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pontoC16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pxButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letraTextView"
        android:text="A"
        android:textAlignment="center"
        android:layout_above="@+id/pxButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/pxButton"
        android:layout_alignStart="@+id/pxButton"
        android:textSize="36sp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="800"
        android:progress="50"
        android:id="@+id/preenchidoSeekBar"
        android:layout_below="@+id/pontoC13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="500"
        android:progress="50"
        android:layout_below="@+id/preenchidoSeekBar"
        android:layout_alignLeft="@+id/preenchidoSeekBar"
        android:layout_alignStart="@+id/preenchidoSeekBar"
        android:id="@+id/vazioSeekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
